<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="15dp">

        <ImageView
            android:id="@+id/dlgImgSepedaSewa"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/dlgSepedaDisewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dlgImgSepedaSewa"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sepeda yang disewa"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dlgNamaPenyewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dlgSepedaDisewa"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom"
            android:padding="5dp"
            android:text="Nama Penyewa"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/dlgTglDisewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dlgNamaPenyewa"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom"
            android:padding="5dp"
            android:text="Tanggal Sewa"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/dlgBiayaSewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dlgTglDisewa"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom"
            android:padding="5dp"
            android:text="Biaya Sewa"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

    </RelativeLayout>

</ScrollView>